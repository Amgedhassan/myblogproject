<% posts.forEach((post) => { %>
<h2> <%= post.title %> </h2>
    <% if (post.content.length >= 500){ %>
        <p> <%= post.content.slice(0, 500) %> ...<a href="/posts/<%=post.title%>">Read more</a> </p>
    <% } else { %>
    <p> <%= post.content %> </p>
    <% } %>

    <%  }) %>
