<%- include("partials/header") %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-4">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control" id="title" placeholder="Your post title">
    </div>
    <div class="mb-4">
        <label for="postContent" class="form-label">Post</label>
        <textarea name="postContent" class="form-control" id="postContent" placeholder="Type your blog post here"></textarea>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Publish</button>
    </div>

</form>


<%- include("partials/footer") %>
